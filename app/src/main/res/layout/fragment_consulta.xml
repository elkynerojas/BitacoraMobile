<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="elkinrojas.com.bitacora.consultaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CONSULTA DE REGISTROS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Funcionario"/>
        <Spinner
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/spinConsultaRegistro"
            ></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Fecha Inicial"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="DD-MM-AA"
            android:textAlignment="center"
            android:id="@+id/etFechaInicial"
            android:focusable="false"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Fecha Final"

            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="DD-MM-AA"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="true"
            android:id="@+id/etFechafinal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Consultar"
            android:id="@+id/btnConsultar"/>

    </LinearLayout>

</LinearLayout>
